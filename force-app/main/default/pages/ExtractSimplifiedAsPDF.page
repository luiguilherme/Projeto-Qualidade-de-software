                    <apex:pageBlock rendered="{!ipOutput['REVERSE_DETAIL'] !='-'}" >
                        <apex:pageBlockTable value="{!ipOutput['REVERSE_DETAIL']}" var="f" width="100%" styleClass="container">
                            <apex:column headerValue="Estornos" value="{!f['name']}" width="50%" styleClass="coluna"/>

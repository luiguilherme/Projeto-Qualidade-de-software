                            <apex:column headerValue="Data do Crédito" value="{!f['data']}" width="25%" styleClass="coluna"/>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </div>
                </apex:outputPanel>
                <h3 class="tittle_block" style="{!IF((ipOutput['RECHARGE_DETAIL'] != '-' || ipOutput['DETACHED_DEBITS_RD'] != '-' || ipOutput['OTHERS_DEBITS_RD'] !='-'), 'display:block', 'display:none')}">Recargas</h3>
                <div class="block_font" style="{!IF(ipOutput['RECHARGE_DETAIL'] != '-', 'display:block', 'display:none')}">
                    <apex:pageBlock rendered="{!ipOutput['RECHARGE_DETAIL'] !='-'}" >
                        <apex:pageBlockTable value="{!ipOutput['RECHARGE_DETAIL']}" var="f" width="100%" styleClass="container">
                            <apex:column headerValue="Periodo" value="{!f['data']}" width="50%" styleClass="coluna"/>
                            <apex:column headerValue="Valor" value="{!f['value']}" width="50%" styleClass="coluna"/>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </div>
                <h3 class="tittle_block" style="{!IF((ipOutput['DETACHED_DEBITS_RD'] != '-' || ipOutput['CONTRACTED_SERVICES_RD'] !='-' || ipOutput['OTHERS_DEBITS_RD'] !='-'), 'display:block', 'display:none')}">Movimentações no Saldo de Recarga</h3>
                <apex:outputPanel rendered="{!ipOutput['DETACHED_DEBITS_RD'] !='-'}">
                <div class="block_font" style="{!IF(ipOutput['DETACHED_DEBITS_RD'] != '-', 'display:block', 'display:none')}">
                     <apex:pageBlock rendered="{!ipOutput['DETACHED_DEBITS_RD'] !='-'}" >
                         <apex:pageBlockTable value="{!ipOutput['DETACHED_DEBITS_RD']}" var="f" width="100%" styleClass="container">
                             <apex:column headerValue="Movimentação Avulsa" value="{!f['name']}" width="50%" styleClass="coluna"/>
                             <apex:column headerValue="Valor Descontado" value="{!f['value']}" width="25%" styleClass="coluna"/>
                             <apex:column headerValue="Total Utilizado" value="{!f['amount']}" width="25%" styleClass="coluna"/>
                         </apex:pageBlockTable>
                    </apex:pageBlock>
                </div><br/>
                </apex:outputPanel>

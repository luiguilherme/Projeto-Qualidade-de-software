                        <apex:pageBlockTable value="{!ipOutput['CONTRACTED_SERVICES_RD']}" var="f" width="100%" styleClass="container">
                            <apex:column headerValue="Serviços Contratados" value="{!f['name']}" width="50%" styleClass="coluna"/>
                            <apex:column headerValue="Valor Descontado" value="{!f['value']}" width="25%" styleClass="coluna"/>
                            <apex:column headerValue="Data da Cobrança/Renovação" value="{!f['data']}" width="25%" styleClass="coluna"/>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </div><br/>
                </apex:outputPanel>
                <apex:outputPanel rendered="{!ipOutput['OTHERS_DEBITS_RD'] !='-'}">
                <div class="block_font" style="{!IF(ipOutput['OTHERS_DEBITS_RD'] != '-', 'display:block', 'display:none')}">

                <apex:outputPanel rendered="{!ipOutput['DETACHED_DEBITS_FC'] !='-'}">
                <div class="block_font" style="{!IF(ipOutput['DETACHED_DEBITS_FC'] != '-', 'display:block', 'display:none')}">
                    <apex:pageBlock rendered="{!ipOutput['DETACHED_DEBITS_FC'] !='-'}" >
                        <apex:pageBlockTable value="{!ipOutput['DETACHED_DEBITS_FC']}" var="f" width="100%" styleClass="container">
                            <apex:column headerValue="Movimentação Avulsa" value="{!f['name']}" width="50%" styleClass="coluna"/>
                            <apex:column headerValue="Valor Descontado" value="{!f['value']}" width="25%" styleClass="coluna"/>
                            <apex:column headerValue="Total Utilizado" value="{!f['amount']}" width="25%" styleClass="coluna"/>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </div><br/>

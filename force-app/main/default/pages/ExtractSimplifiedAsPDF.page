                <apex:outputPanel rendered="{!ipOutput['BONUS_PROMOTION_MOVIMENT'] !='-'}">
                <div class="block_font" style="{!IF(ipOutput['BONUS_PROMOTION_MOVIMENT'] != '-', 'display:block', 'display:none')}">
                        <apex:pageBlock rendered="{!ipOutput['BONUS_PROMOTION_MOVIMENT'] !='-'}" >
                            <apex:pageBlockTable value="{!ipOutput['BONUS_PROMOTION_MOVIMENT']}" var="f" width="100%" styleClass="container">
                                <apex:column headerValue="Bônus" value="{!f['name']}" width="50%" styleClass="coluna"/>
                                <apex:column headerValue="Total recebido" value="{!f['value']}" width="25%" styleClass="coluna"/>
                                <apex:column headerValue="Data do crédito" value="{!f['data']}" width="25%" styleClass="coluna"/>
                            </apex:pageBlockTable>
                        </apex:pageBlock>
                </div>
                </apex:outputPanel>
                <apex:outputPanel rendered="{!ipOutput['SMS_VOICE_PACKETS_DETAIL'] !='-'}">

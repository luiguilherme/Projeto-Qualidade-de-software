                    <apex:pageBlock rendered="{!ipOutput['CONTRACTED_SERVICES_FC'] !='-'}" >
                        <apex:pageBlockTable value="{!ipOutput['CONTRACTED_SERVICES_FC']}" var="f" width="100%" styleClass="container">

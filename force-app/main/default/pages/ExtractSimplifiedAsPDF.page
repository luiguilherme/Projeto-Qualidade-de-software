                    <apex:pageBlock rendered="{!ipOutput['SMS_VOICE_PACKETS_DETAIL'] != '-'}">
                        <apex:pageBlockTable rendered="{!ipOutput['SMS_VOICE_PACKETS_DETAIL']!='-'}" value="{!ipOutput['SMS_VOICE_PACKETS_DETAIL']}" var="f" width="100%" styleClass="container">

                            <apex:column headerValue="Total recebido" value="{!f['value']}" width="25%" styleClass="coluna"/>
                            <apex:column headerValue="Data do crédito" value="{!f['data']}" width="25%" styleClass="coluna"/>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </div><br/>
                </apex:outputPanel>
                <apex:outputPanel rendered="{!ipOutput['INTERNET_PACKETS_DETAIL'] !='-'}">
                <div class="block_font" style="{!IF(ipOutput['INTERNET_PACKETS_DETAIL'] != '-', 'display:block', 'display:none')}">
                    <apex:pageBlock rendered="{!ipOutput['INTERNET_PACKETS_DETAIL'] !='-'}" >
                        <apex:pageBlockTable value="{!ipOutput['INTERNET_PACKETS_DETAIL']}" var="f" width="100%" styleClass="container">
                            <apex:column headerValue="Internet" value="{!f['name']}" width="50%" styleClass="coluna"/>
                            <apex:column headerValue="Total Recebido" value="{!f['value']}" width="25%" styleClass="coluna"/>
                            <apex:column headerValue="Data do Crédito" value="{!f['data']}" width="25%" styleClass="coluna"/>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </div><br/>
                </apex:outputPanel>
                <apex:outputPanel rendered="{!ipOutput['OTHERS_CREDITS'] !='-'}">
                <div class="block_font" style="{!IF(ipOutput['OTHERS_CREDITS'] != '-', 'display:block', 'display:none')}">
                    <apex:pageBlock rendered="{!ipOutput['OTHERS_CREDITS'] !='-'}" >
                        <apex:pageBlockTable value="{!ipOutput['OTHERS_CREDITS']}" var="f" width="100%" styleClass="container">
                            <apex:column headerValue="Ajustes" value="{!f['name']}" width="50%" styleClass="coluna"/>
                            <apex:column headerValue="Total Recebido" value="{!f['value']}" width="25%" styleClass="coluna"/>
                            <apex:column headerValue="Data do Crédito" value="{!f['data']}" width="25%" styleClass="coluna"/>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </div><br/>
                </apex:outputPanel>
                <apex:outputPanel rendered="{!ipOutput['ADJUSTS_DETAIL'] !='-'}">
                <div class="block_font" style="{!IF(ipOutput['ADJUSTS_DETAIL'] != '-', 'display:block', 'display:none')}">
                    <apex:pageBlock rendered="{!ipOutput['ADJUSTS_DETAIL'] !='-'}" >
                        <apex:pageBlockTable value="{!ipOutput['ADJUSTS_DETAIL']}" var="f" width="100%" styleClass="container">
                            <apex:column headerValue="Ajustes" value="{!f['name']}" width="50%" styleClass="coluna"/>
                            <apex:column headerValue="Total Recebido" value="{!f['value']}" width="25%" styleClass="coluna"/>
                            <apex:column headerValue="Data do Crédito" value="{!f['data']}" width="25%" styleClass="coluna"/>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </div><br/>
                </apex:outputPanel>
                <apex:outputPanel rendered="{!ipOutput['CONTESTATIONS_DETAIL'] !='-'}">
                <div class="block_font" style="{!IF(ipOutput['CONTESTATIONS_DETAIL'] != '-', 'display:block', 'display:none')}">
                    <apex:pageBlock rendered="{!ipOutput['CONTESTATIONS_DETAIL'] !='-'}" >
                        <apex:pageBlockTable value="{!ipOutput['CONTESTATIONS_DETAIL']}" var="f" width="100%" styleClass="container">

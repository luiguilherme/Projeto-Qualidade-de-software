                        <apex:pageBlockTable value="{!ipOutput['RECHARGE_PLAFOND_INFO']}" var="f" width="100%" styleClass="container">
                            <apex:column headerValue="Resumo de movimentações nos saldos" width="50%" value="{!f['name']}" styleClass="coluna"/>
                            <apex:column headerValue="Valor" value="{!f['value']}" width="25%" styleClass="coluna"/>
                            <apex:column headerValue="Data" value="{!f['data']}" width="25%" styleClass="coluna"/>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </div>

